<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Show</title>
    <!--bootstrap-->
    <link href="/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <script defer src="/js/bootstrap.bundle.js"></script>
  </head>
  <body>
    <main>
      <%- include('../partials/header') %>
      <section>
        <div class="d-flex flex-row">
          <table class="table">
            <thead>
              <tr class="table-dark">
                <th></th>
                <th class="bg-secondary text-white">Course Name</th>
                <th class="bg-secondary text-white">Intructor</th>
                <th class="bg-secondary text-white">Department</th>
              </tr>
            </thead>
            <tbody>
              <tr class="table-dark">
                <th></th>
                <td class="bg-secondary text-white">
                  <%= course.courseName %>
                </td>
                <td class="bg-secondary text-white">
                  <%= course.instructor %>
                </td>
                <td class="bg-secondary text-white">
                  <%= course.departmentName %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="d-flex flex-row">
          <div class="d-flex flex-row">
            <form
              action="/courses/<%= course._id %>?_method=DELETE"
              method="POST"
            >
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
          <div class="d-flex flex-row">
            <a href="/courses/<%= course._id %>/edit">
              <button type="button" class="btn btn-warning">Edit</button>
            </a>
          </div>
        </div>

        <h2>List of Your Notes For this Course</h2>


        <div class="d-flex flex-row">
          <table class="table">
            <thead>
              <tr class="table-dark">
                <th class="bg-secondary text-white">Note Name</th>
                <th class="bg-secondary text-white">Date</th>
              </tr>
            </thead>
            <tbody>
              <% course.notes.forEach((note) => { %>
              <tr class="table-dark">
                <td class="bg-secondary text-white">
                  <a
                    class="bg-secondary text-black-50"
                    href="/notes/<%= course.notes._id %>"
                    ><%= note.title %>
                  </a>
                </td>
                <td class="bg-secondary text-white"><%= note.dateAdded %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>
